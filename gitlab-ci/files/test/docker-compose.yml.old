version: '2'

networks:
    gitlab-net:
      external:
        name: gitlab-net

services:
 gitlab:
  image: gitlab/gitlab-ce:latest
  container_name: gitlab
  hostname: 'gitlab'
  restart: always
  mem_limit: 2000m
#  environment:
#    - VIRTUAL_HOST=gitlab.inaccurate.ru
#    - LETSENCRYPT_HOST=gitlab.inaccurate.ru
#    - LETSENCRYPT_EMAIL=admin@gitlab.inaccurate.ru
  volumes:
    - '/srv/gitlab/config:/etc/gitlab'
    - '/srv/gitlab/logs:/var/log/gitlab'
    - '/srv/gitlab/data:/var/opt/gitlab'
  networks:
    - gitlab-net
  expose:
    - 80
    - 443
  ports:
    - '80:80'
    - '443:443'
    - '2222:22'
